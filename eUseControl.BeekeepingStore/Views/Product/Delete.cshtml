@model eUseControl.BeekeepingStore.Domain.Entities.Product.Product

@{
    ViewBag.Title = "Delete product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2>Confirm deletion</h2>

    <div class="alert alert-danger mb-4">
        <h4 class="alert-heading">Attention!</h4>
        <p>Are you sure you want to delete this product? This action cannot be cancelled.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title mb-0">@Model.Name</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Stock:</dt>
                <dd class="col-sm-9">@Model.StockQuantity buc.</dd>
            </dl>
        </div>
        <div class="card-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex gap-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div> 