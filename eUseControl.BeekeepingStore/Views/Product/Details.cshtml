@model eUseControl.BeekeepingStore.Domain.Entities.Product.Product

@{
    ViewBag.Title = "Detalii produs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2>Product details</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">@Model.Name</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3">
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                            <p class="text-muted">No image</p>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

                        <dt class="col-sm-3">Price:</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-3">Category:</dt>
                        <dd class="col-sm-9">@Model.Category</dd>

                        <dt class="col-sm-3">Stock:</dt>
                        <dd class="col-sm-9">@Model.StockQuantity pcs.</dd>

                        <dt class="col-sm-3">Active:</dt>
                        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>

                        <dt class="col-sm-3">Data added:</dt>
                        <dd class="col-sm-9">@Model.DateAdded.ToString("dd.MM.yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex gap-2">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Back to the list", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div> 