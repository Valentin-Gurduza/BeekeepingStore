@model eUseControl.BeekeepingStore.Domain.Entities.Order.UpdateOrderStatusRequest

@{
    ViewBag.Title = "Actualizare status comandă #" + Model.OrderId;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Actualizare status comandă #@Model.OrderId</h1>
                <div>
                    <a href="@Url.Action("Details", "AdminOrder", new { id = Model.OrderId })" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Înapoi la detalii comandă
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Actualizare status</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("UpdateStatus", "AdminOrder", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.OrderId)

                        <div class="mb-3">
                            <label for="OrderStatus" class="form-label">Status comandă</label>
                            @Html.DropDownList("OrderStatus", ViewBag.StatusList as SelectList, new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.OrderStatus, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label for="Notes" class="form-label">Note (opțional)</label>
                            @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", rows = 3, placeholder = "Adăugați note despre actualizarea statusului..." })
                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Actualizează status
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
} 