@{
    ViewBag.Title = "Comenzile mele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Comenzile mele</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="text-center py-5">
                        <i class="fas fa-shopping-bag fa-5x text-muted mb-4"></i>
                        <h5>Nu ai nicio comandă încă</h5>
                        <p class="text-muted">Comenzile tale vor apărea aici după ce vei face cumpărături.</p>
                        <a href="@Url.Action("Products", "Home")" class="btn btn-primary mt-3">Magazin</a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">Înapoi la profil</a>
            </div>
        </div>
    </div>
</div> 