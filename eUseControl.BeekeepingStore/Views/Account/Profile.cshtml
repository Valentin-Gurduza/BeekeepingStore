@model eUseControl.BeekeepingStore.BusinessLogic.Interfaces.UProfileData

@{
    ViewBag.Title = "Profilul meu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Profil</h4>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@Model.ProfilePicture" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                    }
                    else
                    {
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                    }
                    <h5 class="my-3">@Model.FullName</h5>
                    <p class="text-muted mb-1">@Model.Email</p>
                    <p class="text-muted mb-4">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            @Model.Address
                        }
                        else
                        {
                            <span>Nicio adresă specificată</span>
                        }
                    </p>
                    <div class="d-flex justify-content-center mb-2">
                        <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary">Editează profilul</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Detalii profil</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bold">Nume complet</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.FullName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bold">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Email</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bold">Telefon</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    @Model.PhoneNumber
                                }
                                else
                                {
                                    <span>Niciun număr de telefon specificat</span>
                                }
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bold">Adresă</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    @Model.Address
                                }
                                else
                                {
                                    <span>Nicio adresă specificată</span>
                                }
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bold">Data înregistrării</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">
                                @if (Model.RegisterDate.HasValue)
                                {
                                    @Model.RegisterDate.Value.ToString("dd.MM.yyyy HH:mm")
                                }
                                else
                                {
                                    <span>Necunoscută</span>
                                }
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 fw-bold">Ultima autentificare</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">
                                @if (Model.LastLogin.HasValue)
                                {
                                    @Model.LastLogin.Value.ToString("dd.MM.yyyy HH:mm")
                                }
                                else
                                {
                                    <span>Necunoscută</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Comenzile mele</h5>
                </div>
                <div class="card-body">
                    <p>Vizualizați istoricul comenzilor dvs. și urmăriți statusul acestora.</p>
                    <a href="@Url.Action("History", "Order")" class="btn btn-primary">
                        <i class="fas fa-list me-2"></i>Vezi comenzile mele
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 